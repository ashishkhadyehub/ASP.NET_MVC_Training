@model EBS.UI.ViewModels.EventDetailsViewModel

<div class="row m-3">
    <div class="col-4">
        <img src="@Model.Image" style="width:100%" alt="concert image" class="m-3" />
    </div>
    <div class="col-1">
    </div>
    <div class="col-7">
        <dl class="row">
            <div><b>Event Id :</b> @Model.Id</div>
            <hr />
            <div><b>Event Name :</b> @Model.Name</div>
            <hr />
            <div><b>Description :</b> @Model.Description</div>
            <hr />
            <div><b>Venue Name :</b> @Model.Venue</div>
            <hr />
            <div><b>Venue Address :</b> @Model.VenueAddress</div>
            <hr />
            <div><b>Event Date & Time :</b> @Model.DateTime.ToString("MMM dd yyyy hh:mm")</div>
            <hr />
            <div class="mt-2"><img src="@Model.PlannerImage" style="height:150px;width:150px" class="rounded-circle img-fluid" /></div>
            <hr />
            <div><b>Planner Name :</b> @Model.Planner</div>
            <hr />
            <div class="mt-3"><a class="btn btn-success" asp-action="AvailableTickets" asp-route-id="@Model.Id">Check Availaibility</a></div>
        </dl>
    </div>
</div>
<div>

    <hr />

</div>
